---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Hero from '../components/Hero.astro';
import Certificates from '../components/Certificates';
import DiamondNew from '../components/Elements/DiamondNew.astro';
import SidebarHeading from '../components/Elements/SidebarHeading.astro';

const skills = [
	"React",
	"NodeJS",
	"TypeScript",
	"MySQL",
	"MongoDB",
	"JQuery",
	"PHP",
	"HTML / CSS",
	"Wordpress",
	"Shopify",
	"Illustrator",
	"Photoshop",
	"Premiere Pro",
	"After Effects",
	"Cinema 4D",
	"Spanish"
];

---

<html lang="en">
	<head>
		<MainHead	/>
	</head>
	<body>
		<Hero pageTitle={'Home'} reverse={true}>
			<div slot='side-content'>
				<div class="mb-8">
					<SidebarHeading heading='Skills' />
					<div class=" columns-2">
						{
							skills.map((skill, index) => (
								<div class="mb-1">{skill}</div>
							))
						}
					</div>
				</div>
				<div>
					<SidebarHeading heading='Certificates' />
					<div class="text-white">
						<Certificates client:load/>
					</div>
				</div>
			</div>
			<div slot='main-content' class='w-full min-h-full flex justify-center items-center md:items-center overflow-x-hidden overflow-y-hidden'>
				<div class="flex flex-col justify-center items-center gap-8 py-8">
					<DiamondNew heading={'Carlos D. Montero'} subheading={'Full Stack Web Developer'} tags={[]} icon="cdmvfx">
						<img
							slot='background'
							src="/assets/profile_photo.webp"
							class="absolute top-[10%] left-[12%] w-[70%]"
							alt=""
						/>
					</DiamondNew>
					<div class="text-white max-w-xl lg:max-w-6xl text-lg md:text-xl lg:text-2xl xl:text-2xl text-center font-thin px-4">
						Hi, I'm Carlos. I'm a full stack web developer (and former videographer / graphic designer) looking to improve my skillset in the complete development spectrum: everything from infrastructure to user experience.
					</div>
					<a class="btn tracking-widest text-sm text-white bg-emerald-600 outline outline-1 outline-emerald-400 outline-offset-1 px-2 py-2 inline-block transition hover:bg-emerald-500" href="/about">Read full bio</a>
				</div>
			</div>
		</Hero>
	</body>
</html>
