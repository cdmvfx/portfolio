---
import LogoIcon from "./LogoIcon.astro"

type HeaderProps = {
	icon: any
	heading: string
	subheading: string
}

const {icon, heading, subheading} = Astro.props as HeaderProps

---

<div class="flex items-center gap-6 w-[565px] pl-4 relative">
	<div
		class="w-[30px] h-[30px] bg-black rotate-45 z-20 outline outline-1 outline-emerald-200 outline-offset-2"
	>
		<LogoIcon />
	</div>
	<div class="mb-4 z-20">
		<span class="text-white font-thin text-4xl inline-block">
			{heading}
		</span>
		<div
			class="-ml-4 w-[400px] h-[1px] bg-gradient-to-r from-emerald-200"
		>
		</div>
		<span class="inline-block text-white">
			{subheading}
		</span>
	</div>
</div>