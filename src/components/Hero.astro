---
import Nav from "../components/Nav.astro";
import MobileNav from "../components/MobileNav";
import { Icon } from 'astro-icon'

type HeroProps = {
	pageTitle: string;
	reverse: boolean
};

const {
	pageTitle = "Home",
	reverse = false
} = Astro.props as HeroProps;

---

<div
	class="bg-gradient-to-br from-emerald-700 via-black to-black animate-emerald-gradient-bg min-h-screen h-full md:h-screen"
>
	<div class="p-4 md:p-8 w-full h-full ">
		<div class="bg-emerald-200 bg-opacity-10 w-full min-h-screen md:min-h-full h-full grid grid-rows-[50px_auto] md:grid-rows-1 md:grid-cols-[50px_auto] p-2 outline outline-1 outline-offset-4 outline-emerald-600">
			<div class="relative md:w-[50px] mb-4">
				<div
					class="flex justify-between items-center md:inline-block md:absolute md:-top-8 md:left-1 font-thin text-white text-4xl md:rotate-90 origin-bottom-left md:whitespace-nowrap"
				>
					{pageTitle}
					<MobileNav client:load />
				</div>
			</div>
			<div class={`bg-emerald-500 max-w-full bg-opacity-20 flex ${reverse ? "flex-col-reverse" : "flex-col"} md:flex-row gap-4 md:overflow-auto py-4`}>
				<div id="content-col" class="px-4 w-full md:w-[300px] flex-shrink-0 flex flex-col gap-4">
					<Nav />
					<slot name='side-content' />
				</div>
				<div
					id="content-ctn"
					class="w-full h-full"
				>
					<slot name='main-content' />
				</div>
			</div>
		</div>
	</div>
</div>
